<Window x:Class="DisplayShift.Switch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DisplayShift"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Switching Display..." SizeToContent="WidthAndHeight" Closing="Window_Closing">
    <Grid Height="80" Width="600">
        <ProgressBar x:Name="DelayBar" HorizontalAlignment="Center" Height="30" Margin="0,10,0,0" VerticalAlignment="Top" Width="580"/>
        <Label x:Name="Status" Content="Switch in ..." HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="290" FontSize="16"/>
        <Button Content="Settings" Margin="305,45,0,0" VerticalAlignment="Top" Width="80" Click="Settings_Click"/>
        <Button Content="Cancel" Margin="390,45,0,0" VerticalAlignment="Top" Width="80" Click="Cancel_Click"/>
        <Button Content="Skip Wait" Margin="475,45,0,0" VerticalAlignment="Top" Width="80" Click="Skip_Click"/>

    </Grid>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
</Window>
